<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.njames.myfirstapp.MonitorActivity">

    <TextView
        android:id="@+id/t2_value"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/t2_label"
        app:layout_constraintTop_toBottomOf="@+id/t1_value" />

    <TextView
        android:id="@+id/t1_value"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/t1_label"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="117dp" />

    <EditText
        android:id="@+id/t2_label"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Temp 3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1_label"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/t1_label"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Temp 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t0_label"
        android:layout_marginStart="35dp" />

    <EditText
        android:id="@+id/t0_label"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Temp 1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/t0_value"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="37dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/t0_label"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_label_button"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Update Labels"
        app:layout_constraintTop_toBottomOf="@+id/t2_label"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.143" />

    <Switch
        android:id="@+id/units"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="37dp"
        android:checked="false"
        android:showText="true"
        android:splitTrack="false"
        android:switchMinWidth="75dp"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Button"
        android:text="Units"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textOff="C"
        android:textOn="F"
        app:layout_constraintLeft_toRightOf="@+id/update_label_button"
        app:layout_constraintTop_toBottomOf="@+id/t2_value"
        tools:checked="false" />

</android.support.constraint.ConstraintLayout>
